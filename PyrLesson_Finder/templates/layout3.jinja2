<!DOCTYPE html>
<html lang="{{request.locale_name}}">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js" integrity="sha384-0s5Pv64cNZJieYFkXYOTId2HMA2Lfb6q2nAcx2n0RTLUnCAoTTsS0nKEO27XyKcY" crossorigin="anonymous"></script>
    <script src="//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js" integrity="sha384-ZoaMbDF+4LeFxg6WdScQ9nnR1QC2MIRxA1O9KWEXQwns1G8UNyIEZIQidzb0T1fo" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="{{request.static_url('PyrLesson_Finder:static/main.css')}}" rel="stylesheet">

    {% if title %}
        <title>Lesson Finder - {{ title }}</title>
    {% else %}
        <title>Lesson Finder</title>
    {% endif %}
</head>
<body>
    <header class="site-header">
      <nav class="navbar navbar-expand-md">
        <div class="container">
          <a class="navbar-brand mr-4" href="/">Lesson Finder</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarToggle">
            <div class="navbar-nav mr-auto">
              <a class="nav-item nav-link" href="/">Home</a>
            </div>
            <!-- Navbar Right Side -->
            <div class="navbar-nav">
              {% if request.authenticated_userid %}
                <a class="nav-item nav-link" href="{{ request.route_url('auth', action='out') }}">Logout</a>
                <a class="nav-item nav-link" href="{{ request.route_url('profile', id=request.authenticated_userid) }}">Profile</a>
               {% else  %}
                <a class="nav-item nav-link" href="{{ request.route_url('login') }}">Login</a>
                <a class="nav-item nav-link" href="{{ request.route_url('signup') }}">Sign Up</a>
              {% endif %}
              <a class="nav-item nav-link" href="{{ request.route_url('search') }}">Search</a>
            </div>
          </div>
        </div>
      </nav>
    </header>
	<main role='main' class='container'>
		<div class="row">
            <div class="col-md-12">
				{% if request.session.peek_flash() %}
					<div class="alert alert-danger">
					  {{ request.session.pop_flash() }}
					</div>
				{% endif %}
                {% block content %}{% endblock %}
            </div>
		</div>
		<div class="row">
			<div class="col-md-12">
				{% block content2 %}{% endblock %}
			</div>
		</div>
	</main>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>