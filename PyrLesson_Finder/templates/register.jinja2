{% extends "layout2.jinja2" %}
{% block content %}
    <div class="content-section">
        <div class="row">
            <div class="col-md-4">
                <li class="list-group-item">
                    <h3>{{ lesson.name }}</h3>
                    <h4>{{ lesson.location }}</h4>
                </li>
            </div>
            <form method="POST" action="{{ request.route_url('register_dep', lesson_id=lesson.id) }}">
{#                {{ form.hidden_tag() }}#}
                <fieldset class="form-group">
                    <legend class="border-bottom mb-4">Add the information below.</legend>
                    <div class="form-group">
                        {{ form.fName.label(class="form-control-label") }}
                        {% if form.fName.errors %}
                            {{ form.fName(class="form-control form-control-lg is-invalid") }}
                            <div class="invalid-feedback">
                                {% for error in form.fName.errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            {{ form.fName(class="form-control form-control-lg") }}
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form.lName.label(class="form-control-label") }}
                        {% if form.lName.errors %}
                            {{ form.lName(class="form-control form-control-lg is-invalid") }}
                            <div class="invalid-feedback">
                                {% for error in form.lName.errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            {{ form.lName(class="form-control form-control-lg") }}
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form.contactEmail.label(class="form-control-label") }}
                        {% if form.contactEmail.errors %}
                            {{ form.contactEmail(class="form-control form-control-lg is-invalid") }}
                            <div class="invalid-feedback">
                                {% for error in form.contactEmail.errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            {{ form.contactEmail(class="form-control form-control-lg") }}
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form.contactNum.label(class="form-control-label") }}
                        {% if form.contactNum.errors %}
                            {{ form.contactNum(class="form-control form-control-lg is-invalid") }}
                            <div class="invalid-feedback">
                                {% for error in form.contactNum.errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            {{ form.contactNum(class="form-control form-control-lg") }}
                        {% endif %}
                    </div>
                </fieldset>
                <div class="form-group">
                    {{ form.submit(class="btn btn-outline-info") }}
                </div>
            </form>
        </div>
    </div>
{% endblock content %}
